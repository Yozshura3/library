{% extends 'base.html.twig' %}

{% block title %} B O O K S {% endblock %}

{% block section %}

    <div class="blockajout">
        <div class="ajout">
            <a href="{{ path('book_insert_form') }}"><p>Ajouter un livre</p></a>
        </div>
    </div>


    <div class="container">


    {% for book in books %}


<div class="books">

<h1> {{ book.title }}</h1>
    <hr>
    <h2>{{ book.author }}</h2>
<p> {{ book.nbpages }} pages</p>
<p>Genre: {{ book.style }}</p>

    {% if book.instock %}
        <p class="green">Disponible</p>
    {% else %}
        <p class="red">En Rupture</p>
    {% endif %}

    <div class="update">

        <a href="{{ path('livre', {id: book.id} ) }}"><div class="detail"><img class="resp" src="{{ asset('img/open-book.png') }}" alt=""></div></a>
        <a href="{{ path('book_update_form', {id: book.id}) }}"><div class="detail"><img class="resp" src="{{ asset('img/pencil.png') }}" alt=""></div></a>
        <a href="{{ path('book_delete', {id: book.id}) }}"><div class="detail"><img class="resp" src="{{ asset('img/trash.png') }}" alt=""></div></a>
    </div>

</div>

{%  endfor %}
    </div>

{% endblock %}